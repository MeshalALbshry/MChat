<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @*@Styles.Render("~/Content/Chat.css")*@
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/whatsapp.css" rel="stylesheet" />
    <link href="~/Content/AddContact.css" rel="stylesheet" />
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/chat-interactive.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("Chat", "Index", "Home", null, new { @class = "navbar-brand" })*@
                @*@Html.ActionLink("Add Contact", "Index", "AddContact", null, new { @class = "navbar-brand", @style = "background:#6AB52B;color:white" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    <li style="background: #222222; color: white; font-size: 20px">
                        <a href="/" style="color:white;margin-right:10px"><div class="glyphicon glyphicon-comment"></div>
                            Chat
                        </a>
                    </li>
                    
                    <li style="background: #9e933a; color: white; font-size: 20px">
                        <a href="/AddContact" style="color:white"><div class="glyphicon glyphicon-plus"></div> Add Contact</a>
                    </li>

                    <li style="background: #5298d4; color: white; font-size: 20px">
                        <a href="/Group" style="color:white"><div class="glyphicon glyphicon-user"></div> Groups Management</a>
                    </li>

                    <li style="background: #af4340; color: white; font-size: 20px; ">
                        <a href="/Broadcast" style="color:white"><div class="glyphicon glyphicon-bullhorn"></div> Brodcast</a>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container-fluid">
        @RenderBody()
        </div>
</body>
</html>
